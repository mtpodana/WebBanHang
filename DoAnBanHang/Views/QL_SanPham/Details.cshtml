
<h2>Details</h2>

@model DoAnBanHang.Models.SanPham
@using System;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_QL.cshtml";
}
<body>
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Sửa thông tin sản phẩm
            </h1>
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
                <li><a href="/">Quản lý sản phẩm</a></li>
                <li class="active">Thông tin Sản Phẩm</li>
            </ol>
        </section>
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <h4 class="col-sm-6" id="title">Tên SP:</h4>
                            @*<input class="col-sm-5" type="text" name="TenSP" value="@Html.DisplayFor(model => model.)" />*@
                            @Html.DisplayFor(model => model.TenSP)
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <h4 class="col-sm-6" id="title">Hình ảnh:</h4>
                            @*<div class="col-sm-4" style="width:300px"> @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })</div>
                            <img src="@Url.Content(Model.Image)" style="width:200px;height:200px;" id="previewImage" />*@
                            @*<input type="file" style="width:200px;" name="ImageUpload" onchange="ShowImagePreview(this,document.getElementById('previewImage'))" />*@
                            <img src="@Url.Content(Model.Image)" style="width:200px;height:200px;" class="item-img"/>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <h4 class="col-sm-6" id="title">Số lượng:</h4>
                            @*<input class="col-sm-5" type="number" />*@
                            @Html.DisplayFor(model => model.TonKho)
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <h4 class="col-sm-6" id="title">Đơn Giá:</h4>
                            @*<input class="col-sm-5" type="number" />*@
                            @Html.DisplayFor(model => model.DonGia)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <h4 class="col-sm-6" id="title">Loại SP:</h4>
                            @*<input class="col-sm-5" type="text" name="TenSP" value="ID_PhieuNhap" />*@
                            @Html.DisplayFor(model => model.Loai_SP.TenLoai)

                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group text-center">
                        <a href="~/QL_SanPham/Edit/@Model.ID_SP"> <button type="button" class="btn btn-primary btn-lg" data-dismiss="modal">Cập nhật</button></a>
                        
                        <a href="~/QL_SanPham/Index"> <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">Đóng</button></a>
                    </div>
                </div>
            </section>
        }
    </div>
</body>



