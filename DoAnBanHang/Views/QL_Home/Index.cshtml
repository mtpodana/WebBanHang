                                        <td class="text-center">1.000.000đ</td>
                                        <td class="text-center">50%</td>
                                    </tr>
                                    <tr>
                                        <td>#</td>
                                        <td class="text-center">Áo</td>
                                        <td class="text-center">5</td>
                                        <td class="text-center">500.000đ</td>
                                        <td class="text-center">25%</td>
                                    </tr>
                                    <tr>
                                        <td>#</td>
                                        <td class="text-center">Giày</td>
                                        <td class="text-center">5</td>
                                        <td class="text-center">500.000đ</td>
                                        <td class="text-center">25%</td>
                                    </tr>
                                    @*}*@

                                </tbody>
                            </table>
                        </div>
