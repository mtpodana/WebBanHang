                                            <div class="col-sm-12">
                                                <div class="col-sm-1"></div>
                                                <label for="inputEmail3" class="col-sm-3 control-label">Tháng:</label>
                                                <div class="col-sm-4">
                                                    <select class="form-control text-center" id="Month">
                                                        <option value="0" @(month == 0 ? "selected" : "")>Tổng</option>
                                                            @for (int i = 1; i <= 12; i++)
