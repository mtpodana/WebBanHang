
@{var month = 0;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_QL.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Thống kê & báo cáo
        </h1>
